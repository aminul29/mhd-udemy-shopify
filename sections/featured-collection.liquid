<section class="py-16 px-4 md:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="flex items-center justify-between mb-8">
      <div class="flex-1">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900">{{ section.settings.title }}</h2>
      </div>
      <div class="flex-none">
        <a
          href="{{ section.settings.featured_collection.url }}"
          class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200"
        >
          View All
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {% for product in section.settings.featured_collection.products %}
        <div class="product-card h-full flex flex-col">
          {% render 'product-card', product: product %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Featured Collection"
    },
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Collection"
    }
  ]
}
{% endschema %}
