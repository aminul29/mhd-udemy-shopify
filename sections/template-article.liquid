<article class="max-w-4xl mx-auto px-4 py-8">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        <div class="mb-6">
          <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold tracking-wide">{{ blog.title }}</a>
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mt-2">{{ article.title }}</h1>
        </div>
      {% when 'article_author' %}
        {% if section.settings.enable_author %}
          <small class="text-gray-600 text-sm">{{ article.author }}</small>
        {% endif %}
      {% when 'article_date' %}
        {% if section.settings.enable_date %}
          <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}" class="text-gray-600 text-sm ml-4">
            {{ article.published_at | date: '%d-%m-%Y' }}
          </time>
        {% endif %}
      {% when 'article_image' %}
        {% if section.settings.enable_image %}
          <div class="my-8">
            <img
              src="{{ article.image | img_url: 'large' }}"
              alt="{{ article.image.alt | escape }}"
              width="{{ article.image.width }}"
              height="{{ article.image.height }}"
              class="w-full h-auto rounded-lg shadow-lg" />
          </div>
        {% endif %}
      {% when 'article_content' %}
        <div class="prose prose-lg max-w-none mt-8">{{ article.content }}</div>
        {% else %}
    {% endcase %}
  {% endfor %}
</article>

{% if blog.comments_enabled? %}

  <div class="my-8" id="comments">
    {% if article.comments.count > 0 %}
      <div class="space-y-6">
        <h1 class="text-2xl font-bold text-gray-900 mb-4">See what People are saying</h1>
        {% paginate article.comments by 5 %}
          {% for comment in article.comments %}
            <div class="p-4 bg-gray-100 rounded-lg shadow-md">
              <span class="block text-sm font-semibold text-gray-700">{{ comment.author }}</span>
              <span class="block text-xs text-gray-500">{{ comment.created_at | date: format: 'default' }}</span>
              <p class="mt-2 text-gray-800">{{ comment.content }}</p>
            </div>
          {% endfor %}
          <div class="mt-4">
            {% if paginate.pages > 1 %}
              <nav class="flex justify-between">
                {% if paginate.previous %}
                  <a href="{{ paginate.previous.url }}" class="text-gray-700 hover:text-gray-900 font-medium">Previous</a>
                {% endif %}
                {% if paginate.next %}
                  <a href="{{ paginate.next.url }}" class="text-gray-700 hover:text-gray-900 font-medium">Next</a>
                {% endif %}
              </nav>
            {% endif %}
          </div>
        {% endpaginate %}
      </div>
    {% else %}
      <p class="text-base text-center text-gray-900 mb-4">There are no comments available for this article</p>
    {% endif %}
  </div>

  <div id="comment_form" class="mb-8">
    {% form 'new_comment'
      , article %}
      <div class="flex flex-col items-center justify-center max-w-4xl px-4 mx-auto bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Leave a Comment</h2>
        <div class="w-full md:flex md:space-x-4 mb-4">
          <!-- Name Input -->
          <div class="mb-4 md:mb-0 md:w-1/2">
            <label for="comment_author" class="text-gray-700 font-semibold text-sm mb-2 block">Name</label>
            <input
              type="text"
              name="comment[author]"
              id="comment_author"
              class="w-full text-gray-700 border border-gray-300 rounded-md py-2 px-4 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:border-transparent transition duration-200"
              placeholder="Jane Doe"
              required />
          </div>
          <!-- Email Input -->
          <div class="md:w-1/2">
            <label for="comment_email" class="text-gray-700 font-semibold text-sm mb-2 block">Email</label>
            <input
              type="email"
              name="comment[email]"
              id="comment_email"
              class="w-full text-gray-700 border border-gray-300 rounded-md py-2 px-4 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:border-transparent transition duration-200"
              placeholder="jane@doe.com"
              required />
          </div>
        </div>
        <!-- Comment Textarea -->
        <div class="w-full mb-4">
          <label for="comment_content" class="text-gray-700 font-semibold text-sm mb-2 block">Comment</label>
          <textarea
            name="comment[body]"
            id="comment_content"
            class="w-full text-gray-700 border border-gray-300 rounded-md py-2 px-4 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:border-transparent transition duration-200 resize-none h-32"
            required></textarea>
        </div>
        <!-- Submit Button -->
        <div class="w-full">
          <input
            type="submit"
            value="Post Comment"
            class="w-full md:w-auto cursor-pointer px-6 py-3 border border-transparent rounded-md text-base font-medium text-white bg-gray-900 hover:bg-gray-700 transition duration-200 shadow-sm" />
        </div>
      </div>
    {% endform %}
  </div>

{% endif %}

{% schema %}
  {
    "name": "Template Article",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_author",
        "default": true,
        "label": "Enable Author"
      },
      {
        "type": "checkbox",
        "id": "enable_date",
        "default": true,
        "label": "Enable Date"
      },
      {
        "type": "checkbox",
        "id": "enable_image",
        "default": true,
        "label": "Enable Image"
      }
    ],
    "blocks": [
      {
        "type": "article_title",
        "name": "Article Title",
        "limit": 1
      },
      {
        "type": "article_author",
        "name": "Article Author",
        "limit": 1
      },
      {
        "type": "article_date",
        "name": "Article Date",
        "limit": 1
      },
      {
        "type": "article_image",
        "name": "Article FeatureImage",
        "limit": 1
      },
      {
        "type": "article_content",
        "name": "Article Content",
        "limit": 1
      }
    ]
  }
{% endschema %}