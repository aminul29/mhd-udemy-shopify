<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="mt-4 text-gray-600">{{ collection.description }}</div>
    {% endif %}
  </div>

  {% paginate collection.products by 6 %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for product in collection.products %}
        <div class="group relative bg-white rounded-lg shadow-sm hover:shadow-lg transition-shadow duration-300">
          {% if product.featured_image %}
            <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-t-lg">
              <img
                src="{{ product.featured_image | img_url: 'medium' }}"
                alt="{{ product.featured_image.alt }}"
                height=""
                width=""
                class="h-full w-full object-cover object-center">
            </div>
          {% endif %}

          <div class="p-4">
            <span class="text-sm text-gray-500">{{ product.vendor }}</span>
            <a href="{{ product.url }}" class="mt-2 block">
              <h2 class="text-lg font-medium text-gray-900 hover:text-indigo-600 transition-colors">{{ product.title }}</h2>
            </a>
            <p class="mt-2 text-xl font-semibold text-gray-900">{{ product.price | money }}</p>
          </div>
        </div>
      {% else %}
        <div class="col-span-full text-center py-12">
          <p class="text-gray-500 text-lg">No products found.</p>
        </div>
      {% endfor %}
    </div>

    <div class="mt-8">
      {% render 'pagination-numbered'
        , pagination: paginate %}
    </div>
  {% endpaginate %}
</div>