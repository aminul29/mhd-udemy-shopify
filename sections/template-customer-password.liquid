{% # Main container with Alpine.js state management for form toggle #%}
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    {% # Login Form Section #%}
    <div class="bg-white p-8 rounded-lg shadow-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Reset Your Password</h1>
      </div>
      <div class="mt-8 space-y-6">
        {% form 'reset_customer_password' %}
          {% if form.errors %}
            <div class="bg-red-50 p-4 rounded-md mb-6" role="alert">
              <span class="sr-only">Error</span>
              {{ form.errors | default_errors }}
            </div>
          {% endif %}
          
          <div class="space-y-4">

            <div class="relative">
               <label for="password" class="sr-only">Password</label>
               <input type="password" name="customer[password]" autocomplete="new-password" id="password" 
               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
               placeholder="Password"/>
            </div>
            <div class="relative">
               <label for="confirm_password" class="sr-only">Confirm Password</label>
               <input type="password" name="customer[confirm_password]" autocomplete="new-password" id="confirm_password" 
               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
               placeholder="Confirm Password"/>
            </div>

            <div>
              <button type="submit" 
                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Reset Password
              </button>
            </div>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>