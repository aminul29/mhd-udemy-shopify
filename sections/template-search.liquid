<div class="container mx-auto">
   {% paginate search.results by 10 %}
      <h1 class="text-3xl font-bold text-center mt-15 mb-10">Search Results</h1>
      <div class="">
         <form action="{{ routes.search_url }}" method="get">
            <input type="search" name="q" placeholder="Search" value="{{ search.terms | escape }}">
            <button type="submit">Search</button> 
         </form>
      </div>
      {% if search.performed %}
         {% if search.results.size > 0 %}
            <div class="max-w-6xl mx-auto">
               <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                  {% for item in search.results %}
                     {% case item.object_type %}
                        {% when 'product' %}
                           {% render 'product-card', product: item' %}
                        {% else %}
                           
                     {% endcase %}
                  {% endfor %}
               </div>
            </div>

         {% else %}
         <div class="">
            <p>No results found for "{{ search.terms }}". Please try a different search term</p>
         </div>   
         {% endif %}      
      {% endif %}      
      {% render 'pagination-numbered', pagination: paginate %}
   {% endpaginate %}
</div>

