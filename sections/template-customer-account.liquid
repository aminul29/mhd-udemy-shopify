<div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
  <h1 class="text-2xl font-bold text-gray-700">Account</h1>
  
  <!-- Main content container -->
  <div class="block md:flex gap-4">
    <!-- Order history and account details will go here -->
     {% assign number_of_orders = customer.orders | size %}
     {% if number_of_orders > 0 %}
       <div class="w-full md:w-1/2">
         <h2 class="text-xl font-bold text-gray-700 mb-4">Order History</h2>
         <div>
            {% paginate customer.orders by 10 %}
               {% for order in customer.orders %}
                  <div class="relative">
                     <div class="w-full border-t border-gray-300 py-4">
                        {% assign order_image = order.line_items.first.image %}
                        {% if order_image  %}
                           <img class="w-full h-full object-cover object-center" src="{{ order_image | img_url: 'large' }}" alt="{{ order_image.alt }}" height="" width="">
                        {% else %}
                           {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
                        {% endif %}
                     </div>
                     <div class="absolute inset-0 flex items-center justify-center">
                        <div class="text-gray-900 text-2xl font-bold">
                           <h3 class="text-sm text-gray-600">
                              {{ order.name | link_to: order.customer_url }}
                           </h3>
                           <p>{{ order.financial_status_label }}</p>
                        </div>
                        <div class="">
                           <p>{{ order.fulfillment_status_label }}</p>
                           <p>{{ order.total_price | money }}</p>
                        </div>
                     </div>
                  </div>
               {% endfor %}
               <div class="max-w-7xl mx-auto">
                  {% render 'pagination-numbered', pagination: paginate %}
               </div>
            {% endpaginate %}
         </div>
       </div>
     {% else %}
     <div class="w-full">
       <h2 class="text-xl font-bold text-gray-700 mb-4">No orders found</h2>
     </div>
     {% endif %}
  </div>
</div>