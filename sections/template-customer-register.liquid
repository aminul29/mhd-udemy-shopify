{% # Main container with Alpine.js state management for form toggle #%}
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    {% # Login Form Section #%}
    <div class="bg-white p-8 rounded-lg shadow-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Register an Account</h1>
      </div>
      <div class="mt-8 space-y-6">
        {% form 'create_customer' %}
          {% if form.errors %}
            <div class="bg-red-50 p-4 rounded-md mb-6" role="alert">
              <span class="sr-only">Error</span>
              {{ form.errors | default_errors }}
            </div>
          {% endif %}
          
          <div class="space-y-4">
            <div class="relative">
              <label for="first_name" class="sr-only">First Name</label>
              <input type="text" name="customer[first_name]" autocomplete="given-name" id="first_name" 
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="First Name"/>               
            </div>
            <div class="relative">
              <label for="last_name" class="sr-only">Last Name</label>
              <input type="text" name="customer[last_name]" autocomplete="family-name" id="last_name" 
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="Last Name"/>               
            </div>
            <div class="relative">
              <label for="login_email" class="sr-only">Email</label>
              <input type="email" name="customer[email]" autocomplete="email" id="login_email" 
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="Email"/>               
            </div>
            <div class="relative">
               <label for="password" class="sr-only">Password</label>
               <input type="password" name="customer[password]" autocomplete="new-password" id="password" 
               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
               placeholder="Password"/>
            </div>

            <div>
              <button type="submit" 
                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Register
              </button>
            </div>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>