<div class="" x-data="{ lofinForm: true, pwRecoverForm: false}">
   <div x- class="">
      <div class="">
         <h1>Sign in to your account</h1>
      </div>
      <div class="">
         {% form 'customer_login' %}
            {% if form.errors %}
               <div class="" role="alert">
                  <span class="sr-only">Error</span>
                  {{ form.errors | default_errors }}
               </div>
            {% endif %}
            <div class="">
               <label for="login_email" class="sr-only">Email</label>
               <input type="email" name="customer[email]" autocomplete="email" id="login_email" placeholder="Email"/>               
            </div>
            {% if form.password_needed %}
               <label for="password" class="sr-only">Password</label>
               <input type="password" name="customer[password]" autocomplete="current-password" id="password" placeholder="Password"/>
            {% endif %}
            <div class="">
               <button type="submit">Sign in</button>
            </div>
         {% endform %}
      </div>
   </div>
   <div class="">
      <div class="">
         <div class="">
            <h1>Recover your Password</h1>
         </div>
         <div class="">
            {% form 'recover_customer_password' %}
               {% if form.errors %}
                  <div class="" role="alert">
                     <span class="sr-only">Error</span>
                     {{ form.errors | default_errors }}
                  </div>
               {% endif %}
               <div class="">
                  <label for="email" class="sr-only">Email</label>
                  <input type="email" name="email" autocomplete="email" id="email" placeholder="Email"/>               
               </div>
               <div class="">
                  <button type="submit">Recover Password</button>
               </div>
            {% endform %}
         </div>
      </div>
   </div>
</div>