<div class="">
   <div class="">
      <div class="">
         <h1>Sign in to your account</h1>
      </div>
      <div class="">
         {% form 'customer_login' %}
            {% if form.errors %}
               <div class="" role="alert">
                  <span class="sr-only">Error</span>
                  {{ form.errors | default_errors }}
               </div>
            {% endif %}
            <div class="">
               <label for="email" class="sr-only">Email</label>
               <input type="email" name="customer[email]" autocomplete="email" id="email" placeholder="Email"/>               
            </div>
            {% if form.password_needed %}
               <label for="password" class="sr-only">Password</label>
               <input type="password" name="customer[password]" autocomplete="current-password" id="password" placeholder="Password"/>
            {% endif %}
            <div class="">
               <button type="submit">Sign in</button>
            </div>
         {% endform %}
      </div>
   </div>
</div>