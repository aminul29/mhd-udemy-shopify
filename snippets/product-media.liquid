{% case media.media_type %}
   {% when 'image' %}
      <img 
        src="{{ media | img_url: 'large' }}" 
        alt="{{ media.preview_image.alt | escape }}" 
        class="w-full h-full object-cover rounded-lg transition duration-300 ease-in-out hover:opacity-90"
        loading="lazy"
        height=""
        width=""
      >
   {% when 'external_video' %}
      {{ media | external_video_tag: class: 'w-full h-full object-cover rounded-lg' }}
   {% when 'video' %}
      {{ media | video_tag: controls: true, class: 'w-full h-full object-cover rounded-lg' }}
   {% when 'model' %}
      {{ media | model_viewer_tag: class: 'w-full h-full rounded-lg' }}
   {% else %}
      {{ media | media_tag: class: 'w-full h-full rounded-lg' }}
{% endcase %}